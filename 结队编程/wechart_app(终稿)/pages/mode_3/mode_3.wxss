/* pages/mode_3/mode_3.wxss */
page {
    height: 100%;
    width: 100%;
}

.background {
    width: 100%;
    height: 100%;
    position: fixed;
    background-size: 100% 100%;
    z-index: -1;
}

.back {
    position: fixed;
    z-index: 2;
    width: 135rpx;
    height: 100rpx;
    margin-top: 70rpx;
    margin-left: 25rpx;
}

.main {
    height: 80%;
    width: 750rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
}

.cover {
    height: 150rpx;
}

.title image {
    height: 150rpx;
    width: 600rpx;
}

.rule {
    width: 110%;
    height: 500rpx;
    background-color: rgba(255, 255, 255, 0.5);
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.rule image {
    width: 125%;
    height: 500rpx;

}

.t1 {
    font-size: 80rpx;
    font-weight: 600;
}

.t2 {
    font-size: 40rpx;
    font-weight: 550;
}

.button_hover_list {
    opacity: 0.5;
}

.author {
    position: fixed;
    z-index: 2;
    font-family: cursive;
    flex-direction: row;
    bottom: 30rpx;
    right: 60rpx;
}